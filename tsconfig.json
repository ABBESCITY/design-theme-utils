{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", 
    "declaration": true,
    "rootDir": "src",
    "declarationDir": "dist/types",
    "outDir": "dist", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".", 
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "dist"]
}
